<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:openDrawer="start">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            tools:context=".activity.MainActivity">

            <RelativeLayout
                android:id="@+id/lt_r_actionbarlayout"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:background="@color/green">

                <RelativeLayout
                    android:id="@+id/lt_r_maindisplay"
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    android:visibility="visible">

                    <RelativeLayout
                        android:id="@+id/action_set"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@color/green"
                        android:layout_marginBottom="@dimen/_5sdp">

                        <RelativeLayout

                            android:id="@+id/lt_r_menulayout"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_centerVertical="true"
                            android:visibility="visible">

                            <ImageView
                                android:id="@+id/imgMenu"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:src="@mipmap/menu"
                                android:tint="@color/colorPrimary" />


                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/nav_layout"
                            android:layout_width="@dimen/_28sdp"
                            android:layout_height="@dimen/_28sdp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_10sdp"

                            android:background="@drawable/circle_menu"
                            android:elevation="@dimen/_2sdp"
                            android:visibility="gone">

                            <com.zeyalychat.com.utils.CustomTextViewBold
                                android:id="@+id/userName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="T"
                                android:textColor="@color/green"
                                android:textSize="@dimen/_10sdp">

                            </com.zeyalychat.com.utils.CustomTextViewBold>


                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"

                            >


                            <RelativeLayout
                                android:id="@+id/notificationLayout"
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_centerVertical="true">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"

                                    android:src="@mipmap/notification"
                                    android:tint="@color/colorPrimary">

                                </ImageView>

                                <RelativeLayout
                                    android:layout_width="@dimen/_13sdp"
                                    android:layout_height="@dimen/_13sdp"
                                    android:layout_marginLeft="@dimen/_30sdp"
                                    android:layout_marginTop="@dimen/_8sdp"
                                    android:background="@drawable/circle_green"
                                    android:visibility="gone">

                                    <com.zeyalychat.com.utils.CustomSemiBoldTextview
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:text="1"
                                        android:textColor="@color/colorPrimary"
                                        android:textSize="@dimen/_8sdp">

                                    </com.zeyalychat.com.utils.CustomSemiBoldTextview>


                                </RelativeLayout>
                            </RelativeLayout>

                        </RelativeLayout>

                        <com.zeyalychat.com.utils.CustomTextViewBold
                            android:id="@+id/title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_5sdp"

                            android:layout_marginRight="@dimen/_20sdp"
                            android:layout_toRightOf="@+id/lt_r_menulayout"

                            android:shadowColor="@color/colorPrimaryDark"
                            android:text="Classmate"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/_12sdp"
                            android:visibility="visible" />
                    </RelativeLayout>

                </RelativeLayout>


            </RelativeLayout>






            <com.zeyalychat.com.utils.CustomViewPager
                android:layout_below="@+id/lt_r_actionbarlayout"
                android:id="@+id/viewpager"
                android:layout_width="match_parent"

                android:layout_above="@+id/tab"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/bg_ash" />

            <com.google.android.material.tabs.TabLayout
                android:layout_alignParentBottom="true"
                android:id="@+id/tab"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:background="@color/colorPrimary"
                android:elevation="@dimen/_5sdp"
                app:tabGravity="fill"
                app:tabIndicatorColor="@android:color/transparent"
                app:tabMaxWidth="0dp"
                app:tabMode="fixed" />

        </RelativeLayout>

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/nav_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:fitsSystemWindows="true"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_18sdp"
                android:background="@color/colorPrimary"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/headerlogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/navHeader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/contact_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimary">

                            <RelativeLayout
                                android:id="@+id/image_layout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginRight="@dimen/_10sdp">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/profile"
                                    android:layout_width="@dimen/_40sdp"
                                    android:layout_height="@dimen/_40sdp"
                                    android:src="@mipmap/sample"
                                    app:civ_border_color="@color/ViewColor"
                                    app:civ_border_width="0.5dp" />


                            </RelativeLayout>


                            <RelativeLayout
                                android:id="@+id/contact_detail_layout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/_5sdp"

                                android:layout_toRightOf="@+id/image_layout">

                                <com.zeyalychat.com.utils.CustomSemiBoldTextview
                                    android:id="@+id/name_txt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="George wiliams"
                                    android:textColor="@color/full_textt_color"
                                    android:textSize="@dimen/_12sdp" />

                                <com.zeyalychat.com.utils.CustomSemiBoldTextview
                                    android:id="@+id/number_txt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/name_txt"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:text="+91 9876543210"
                                    android:textColor="@color/medium_text_color"
                                    android:textSize="@dimen/_10sdp" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_below="@+id/image_layout">

                            </RelativeLayout>

                        </RelativeLayout>

                        <View
                            android:id="@+id/v1"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:layout_below="@+id/contact_layout"
                            android:background="@color/ViewColor" />


                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:background="@mipmap/circle"
                            android:visibility="gone">

                            <ImageView
                                android:id="@+id/img_profile"
                                android:layout_width="@dimen/_60sdp"
                                android:layout_height="@dimen/_60sdp"
                                android:layout_centerInParent="true"
                                android:src="@mipmap/nav_head" />
                        </RelativeLayout>

                    </RelativeLayout>

                    <include

                        layout="@layout/nav_header_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:visibility="gone" />
                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/nav_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible">

                </androidx.recyclerview.widget.RecyclerView>


            </LinearLayout>

        </com.google.android.material.navigation.NavigationView>
    </androidx.drawerlayout.widget.DrawerLayout>


</layout>