<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <RelativeLayout
            android:id="@+id/view_foreground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/timeperiodLayout"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    >

                    <com.zeyalychat.com.utils.CustomSemiBoldTextview
                        android:id="@+id/timeperiod"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:padding="@dimen/_2sdp"
                        android:visibility="visible"
                        android:text="12 am -1 pm"
                        android:textColor="@color/subcontebt_txt_color"
                        android:textSize="@dimen/_10sdp" />


                </RelativeLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"


                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    app:cardCornerRadius="@dimen/_5sdp"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingRight="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:layout_toRightOf="@+id/timeperiodLayout">

                    <com.zeyalychat.com.utils.CustomSemiBoldTextview
                        android:id="@+id/subjectname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:padding="@dimen/_2sdp"
                        android:text="CHEMISTRY"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_10sdp" />



                </androidx.cardview.widget.CardView>
                <com.zeyalychat.com.utils.CustomSemiBoldTextview
                    android:id="@+id/staffname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cardView"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_toRightOf="@+id/timeperiodLayout"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:padding="@dimen/_2sdp"
                    android:paddingLeft="@dimen/_5sdp"
                    android:visibility="visible"
                    android:text="Acc no:  **** **** **** 1234"
                    android:textColor="@color/subcontebt_txt_color"
                    android:textSize="@dimen/_10sdp" />



            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>


</layout>