<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"

                >


                <RelativeLayout
                    android:id="@+id/title_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_30sdp">

                    <RelativeLayout
                        android:id="@+id/close_layout"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_30sdp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/close_icon_black" />

                    </RelativeLayout>

                    <com.zeyalychat.com.utils.CustomSemiBoldTextview
                        android:id="@+id/subtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tittle_txt"
                        android:layout_marginTop="@dimen/_10sdp"

                        android:background="@android:color/transparent"
                        android:text="We will email you a link to reset your password"
                        android:textColor="@color/subcontebt_txt_color"
                        android:textSize="@dimen/_10sdp"
                        android:visibility="gone" />


                    <com.zeyalychat.com.utils.CustomTextViewBold
                        android:id="@+id/tittle_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/close_layout"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:text="@string/password_reset"
                        android:textColor="@color/txt_bold_clor"
                        android:textSize="@dimen/_14sdp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title_layout"
                    android:layout_marginTop="@dimen/_60sdp">

                    <RelativeLayout
                        android:id="@+id/user_name_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <com.zeyalychat.com.utils.CustomSemiBoldTextview
                            android:id="@+id/title_username"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/new_password"
                            android:textColor="@color/subcontebt_txt_color"
                            android:textSize="@dimen/_12sdp" />

                        <com.zeyalychat.com.utils.CustomEditTextviewSemiLight
                            android:id="@+id/password_edt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/title_username"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@android:color/transparent"
                            android:hint="geo@gmail.com/9234567890"
                            android:maxLines="1"
                            android:minLines="1"
                            android:inputType="textPassword"

                            android:textColor="@color/txt_bold_clor"
                            android:textColorHint="@color/add_bank_color"
                            android:textSize="@dimen/_11sdp" />
                        <RelativeLayout
                            android:id="@+id/pass_hide_show_layout"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/title_username"
                            android:layout_alignParentRight="true">

                            <ImageView
                                android:id="@+id/pass_hide_show_img"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:src="@mipmap/hide_password"

                                />
                        </RelativeLayout>

                        <View
                            android:id="@+id/v1"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_1sdp"
                            android:layout_below="@+id/password_edt"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@color/ViewColor" />

                        <com.zeyalychat.com.utils.CustomSemiBoldTextview
                            android:id="@+id/error_txt_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/v1"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@android:color/transparent"
                            android:text="@string/userName"
                            android:textColor="@color/dark_red"
                            android:textSize="@dimen/_10sdp"
                            android:visibility="gone" />
                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/confirmpassword_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/user_name_layout"
                        android:layout_marginTop="@dimen/_15sdp">

                        <com.zeyalychat.com.utils.CustomSemiBoldTextview
                            android:id="@+id/title_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/confirmPassword"
                            android:textColor="@color/subcontebt_txt_color"
                            android:textSize="@dimen/_12sdp" />

                        <com.zeyalychat.com.utils.CustomEditTextviewSemiLight
                            android:id="@+id/confirm_password_edt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/title_password"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@android:color/transparent"
                            android:hint="••••••••••••"
                            android:layout_marginRight="@dimen/_30sdp"
                            android:inputType="textPassword"
                            android:maxLines="1"
                            android:minLines="1"
                            android:textColor="@color/txt_bold_clor"
                            android:textColorHint="@color/add_bank_color"
                            android:textSize="@dimen/_11sdp" />

                        <RelativeLayout
                            android:id="@+id/hide_show_layout"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/title_password"
                            android:layout_alignParentRight="true">

                            <ImageView
                                android:id="@+id/hide_show_img"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:src="@mipmap/hide_password"

                                />
                        </RelativeLayout>


                        <View
                            android:id="@+id/v3"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_1sdp"
                            android:layout_below="@+id/confirm_password_edt"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@color/ViewColor" />

                        <com.zeyalychat.com.utils.CustomSemiBoldTextview
                            android:id="@+id/confirm_error_txt_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/v3"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@android:color/transparent"
                            android:text="@string/userName"
                            android:textColor="@color/dark_red"
                            android:textSize="@dimen/_10sdp"
                            android:visibility="gone" />
                    </RelativeLayout>




                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/bottom_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"

                    android:layout_centerVertical="true"

                    android:layout_marginBottom="@dimen/_50sdp">

                    <RelativeLayout
                        android:id="@+id/send"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/circle_green">

                        <ImageView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:src="@mipmap/tick" />
                    </RelativeLayout>


                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>


    </RelativeLayout>
</layout>