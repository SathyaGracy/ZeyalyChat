<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_ash"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/action_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/green"
            android:elevation="@dimen/_1sdp">


            <RelativeLayout
                android:id="@+id/act"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:elevation="@dimen/_2sdp">

                <RelativeLayout

                    android:id="@+id/backArraow"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/cart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:src="@mipmap/back_arrow_white"
                        android:tint="@color/colorPrimary" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/backArraow">

                    <com.zeyalychat.com.utils.CustomSemiBoldTextview
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:background="@android:color/transparent"
                        android:text="@string/audio"
                        android:textColor="@color/colorPrimary"
                        android:textColorHint="@color/green"
                        android:textSize="@dimen/_12sdp" />
                </RelativeLayout>


            </RelativeLayout>

            <View
                android:id="@+id/v1"
                android:layout_width="wrap_content"
                android:layout_height="1sp"
                android:layout_below="@+id/act"
                android:background="@color/receiver">

            </View>


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/action_bar_layout"
            android:orientation="horizontal"
            android:weightSum="2">

            <RelativeLayout
                android:id="@+id/TypeLBLLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="visible">

                <RelativeLayout
                    android:id="@+id/ClassRl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:layout_marginTop="@dimen/_10sdp">

                    <com.zeyalychat.com.utils.CustomTextViewSemiLight
                        android:id="@+id/ClassLBl"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:text="@string/Class"
                        android:textColor="@color/full_textt_color"
                        android:textSize="@dimen/_12sdp"
                        android:visibility="visible" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/TypeLayout1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ClassRl"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/box_design"
                    android:padding="@dimen/_10sdp">

                    <com.zeyalychat.com.utils.CustomSemiBoldTextview
                        android:id="@+id/SelectTypeTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:background="@android:color/transparent"
                        android:hint="Eg,10th,12th"
                        android:shadowColor="@color/colorPrimaryDark"
                        android:textColor="@color/full_textt_color"
                        android:textColorHint="@color/hintcolor"
                        android:textSize="@dimen/_12sdp"
                        android:visibility="visible" />

                    <ImageView
                        android:layout_width="@dimen/_13sdp"
                        android:layout_height="@dimen/_13sdp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/arrow_down"
                        android:tint="@color/medium_text_color"
                        android:visibility="visible">

                    </ImageView>

                </RelativeLayout>
            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/dateL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/section"
            android:orientation="horizontal"
            android:weightSum="2">

            <RelativeLayout
                android:id="@+id/DateLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_weight="1"
                android:visibility="visible">

                <RelativeLayout
                    android:id="@+id/DateRl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"

                    android:layout_marginTop="@dimen/_10sdp">

                    <com.zeyalychat.com.utils.CustomTextViewSemiLight
                        android:id="@+id/DateRLBl"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="wrap_content"
                        android:text="@string/Date1"
                        android:textColor="@color/full_textt_color"
                        android:textSize="@dimen/_12sdp"
                        android:visibility="visible" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/DatewRLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_below="@+id/DateRl"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/box_design"
                    android:padding="@dimen/_10sdp">

                    <com.zeyalychat.com.utils.CustomSemiBoldTextview
                        android:id="@+id/DateTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:background="@android:color/transparent"
                        android:hint="08-5-2012"
                        android:shadowColor="@color/colorPrimaryDark"
                        android:textColor="@color/full_textt_color"
                        android:textColorHint="@color/hintcolor"
                        android:textSize="@dimen/_12sdp"
                        android:visibility="visible" />

                    <ImageView
                        android:layout_width="@dimen/_13sdp"
                        android:layout_height="@dimen/_13sdp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/arrow_right"
                        android:tint="@color/medium_text_color"
                        android:visibility="visible">

                    </ImageView>

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ExamProcedureLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_weight="1"
                android:visibility="visible">

                <RelativeLayout
                    android:id="@+id/TimeRRl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"

                    android:layout_marginTop="@dimen/_10sdp">

                    <com.zeyalychat.com.utils.CustomTextViewSemiLight
                        android:id="@+id/timeRLBl"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="wrap_content"
                        android:text="@string/time"
                        android:textColor="@color/full_textt_color"
                        android:textSize="@dimen/_12sdp"
                        android:visibility="visible" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/timeRl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_below="@+id/TimeRRl"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/box_design"
                    android:padding="@dimen/_10sdp">

                    <com.zeyalychat.com.utils.CustomSemiBoldTextview
                        android:id="@+id/timeTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:background="@android:color/transparent"
                        android:hint="10:00"
                        android:shadowColor="@color/colorPrimaryDark"
                        android:textColor="@color/full_textt_color"
                        android:textColorHint="@color/hintcolor"
                        android:textSize="@dimen/_12sdp"
                        android:visibility="visible" />

                    <ImageView
                        android:layout_width="@dimen/_13sdp"
                        android:layout_height="@dimen/_13sdp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/arrow_right"
                        android:tint="@color/medium_text_color"
                        android:visibility="visible">

                    </ImageView>

                </RelativeLayout>

            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/descriptionRl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dateL"
            android:layout_marginTop="@dimen/_10sdp"
            android:visibility="visible">

            <RelativeLayout
                android:id="@+id/descriptionRRl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="@dimen/_10sdp">

                <com.zeyalychat.com.utils.CustomTextViewSemiLight
                    android:id="@+id/descriptionLBl"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:text="@string/Descreption"
                    android:textColor="@color/full_textt_color"
                    android:textSize="@dimen/_12sdp"
                    android:visibility="visible" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/descriptionLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/descriptionRRl"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/box_design"
                android:padding="@dimen/_10sdp">

                <com.zeyalychat.com.utils.CustomEditTextviewSemiLight
                    android:id="@+id/descriptionTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:background="@android:color/transparent"
                    android:hint="description"
                    android:shadowColor="@color/colorPrimaryDark"
                    android:textColor="@color/full_textt_color"
                    android:textColorHint="@color/hintcolor"
                    android:textSize="@dimen/_12sdp"
                    android:visibility="visible" />

                <ImageView
                    android:layout_width="@dimen/_13sdp"
                    android:layout_height="@dimen/_13sdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/arrow_right"
                    android:tint="@color/medium_text_color"
                    android:visibility="gone">

                </ImageView>

            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/recordButtonRl"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="wrap_content"

            android:layout_below="@+id/descriptionRl"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_10sdp"

            android:background="@drawable/box_white_solid">

            <com.zeyalychat.com.utils.CustomTextViewBold
                android:id="@+id/recordButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/_15sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingRight="@dimen/_15sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:text="Start Recording"
                android:textColor="@color/full_textt_color"></com.zeyalychat.com.utils.CustomTextViewBold>

            <ImageView
                android:id="@+id/recordImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/recordButton"
                android:src="@mipmap/play"

                android:tint="@color/green">

            </ImageView>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/playButtonRl"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/descriptionRl"

            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_10sdp"

            android:layout_toRightOf="@+id/recordButtonRl"
            android:background="@drawable/box_white_solid">

            <com.zeyalychat.com.utils.CustomTextViewBold
                android:id="@+id/playButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/_15sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingRight="@dimen/_15sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:text="Start Playing"
                android:textColor="@color/full_textt_color">

            </com.zeyalychat.com.utils.CustomTextViewBold>

            <ImageView
                android:id="@+id/playImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/playButton"
                android:src="@mipmap/play"

                android:tint="@color/green">

            </ImageView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bottom_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"


            android:layout_marginBottom="@dimen/_10sdp">


            <com.zeyalychat.com.utils.CustomButtonBold
                android:id="@+id/submit"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:background="@drawable/button_login"
                android:elevation="@dimen/_2sdp"
                android:outlineAmbientShadowColor="@color/green"
                android:outlineSpotShadowColor="@color/green"
                android:text="@string/send"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp" />


        </RelativeLayout>
    </RelativeLayout>
</layout>
