<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/action_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:elevation="@dimen/_1sdp">


            <RelativeLayout
                android:id="@+id/act"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:elevation="@dimen/_2sdp">

                <RelativeLayout

                    android:id="@+id/backArraow"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/cart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:src="@mipmap/back_arrow_white"
                        android:tint="@color/green" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/backArraow">

                    <com.zeyalychat.com.utils.CustomSemiBoldTextview
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"

                        android:background="@android:color/transparent"
                        android:text="@string/ApplyLeave"
                        android:textColor="@color/full_textt_color"
                        android:textColorHint="@color/green"
                        android:textSize="@dimen/_12sdp" />
                </RelativeLayout>


            </RelativeLayout>

            <View
                android:id="@+id/v1"
                android:layout_width="wrap_content"
                android:layout_height="1sp"
                android:layout_below="@+id/act"
                android:background="@color/receiver">

            </View>


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/home_L"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/action_bar_layout"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"

            android:orientation="vertical"
            android:visibility="visible">

            <RelativeLayout
                android:id="@+id/TypeLBLLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:visibility="visible">

                <RelativeLayout
                    android:id="@+id/TypeRl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/_10sdp">

                    <com.zeyalychat.com.utils.CustomTextViewSemiLight
                        android:id="@+id/TypeLBl"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="wrap_content"
                        android:text="@string/LeaveType"
                        android:textColor="@color/full_textt_color"
                        android:textSize="@dimen/_12sdp"
                        android:visibility="visible" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/TypeLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_toRightOf="@+id/TypeRl"
                    android:background="@drawable/box_design"
                    android:padding="@dimen/_10sdp">

                    <com.zeyalychat.com.utils.CustomSemiBoldTextview
                        android:id="@+id/SelectTypeTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:background="@android:color/transparent"
                        android:hint="@string/SelectLeaveType"
                        android:shadowColor="@color/colorPrimaryDark"
                        android:textColor="@color/full_textt_color"
                        android:textColorHint="@color/medium_text_color"
                        android:textSize="@dimen/_12sdp"
                        android:visibility="visible" />

                    <ImageView
                        android:layout_width="@dimen/_13sdp"
                        android:layout_height="@dimen/_13sdp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/arrow_right"
                        android:tint="@color/medium_text_color"
                        android:visibility="visible">

                    </ImageView>

                </RelativeLayout>
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/DateRl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp">

                <RelativeLayout
                    android:id="@+id/DateLBL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/_10sdp">

                    <com.zeyalychat.com.utils.CustomTextViewSemiLight
                        android:layout_width="@dimen/_100sdp"
                        android:id="@+id/FromDateLbl"
                        android:layout_height="wrap_content"
                        android:text="@string/FromDate"
                        android:textColor="@color/full_textt_color"
                        android:textSize="@dimen/_12sdp"
                        android:visibility="visible" />

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/DateLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_toRightOf="@+id/DateLBL"
                    android:background="@drawable/box_design"
                    android:padding="@dimen/_10sdp">

                    <com.zeyalychat.com.utils.CustomSemiBoldTextview
                        android:id="@+id/DateTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:background="@android:color/transparent"
                        android:hint="dd/mm/yyyy"
                        android:shadowColor="@color/colorPrimaryDark"
                        android:textColor="@color/full_textt_color"
                        android:textColorHint="@color/medium_text_color"
                        android:textSize="@dimen/_12sdp"
                        android:visibility="visible" />

                    <ImageView
                        android:layout_width="@dimen/_13sdp"
                        android:layout_height="@dimen/_13sdp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/cal"
                        android:tint="@color/medium_text_color"
                        android:visibility="visible">

                    </ImageView>

                </RelativeLayout>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/ToDateRl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp">

                <RelativeLayout
                    android:id="@+id/ToDateLBL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/_10sdp">

                    <com.zeyalychat.com.utils.CustomTextViewSemiLight
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="wrap_content"
                        android:text="@string/ToDate"
                        android:textColor="@color/full_textt_color"
                        android:textSize="@dimen/_12sdp"
                        android:visibility="visible" />

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/ToDateLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_toRightOf="@+id/ToDateLBL"
                    android:background="@drawable/box_design"
                    android:padding="@dimen/_10sdp">

                    <com.zeyalychat.com.utils.CustomSemiBoldTextview
                        android:id="@+id/ToDateTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:background="@android:color/transparent"
                        android:hint="@string/ddmmyyyy"
                        android:shadowColor="@color/colorPrimaryDark"
                        android:textColor="@color/full_textt_color"
                        android:textColorHint="@color/medium_text_color"
                        android:textSize="@dimen/_12sdp"
                        android:visibility="visible" />

                    <ImageView
                        android:layout_width="@dimen/_13sdp"
                        android:layout_height="@dimen/_13sdp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/cal"
                        android:tint="@color/medium_text_color"
                        android:visibility="visible">

                    </ImageView>

                </RelativeLayout>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/DescreptionLBLLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:visibility="visible">

                <RelativeLayout
                    android:id="@+id/ReasonRl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/_10sdp">

                    <com.zeyalychat.com.utils.CustomTextViewSemiLight
                        android:id="@+id/ReasonLBl"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="wrap_content"
                        android:text="@string/Reason"
                        android:textColor="@color/full_textt_color"
                        android:textSize="@dimen/_12sdp"
                        android:visibility="visible" />

                </RelativeLayout>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/DescreptionLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/box_design"
                android:padding="@dimen/_10sdp">

                <com.zeyalychat.com.utils.CustomEditTextviewSemiLight
                    android:id="@+id/DescreptionTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:background="@android:color/transparent"
                    android:hint=""
                    android:maxLines="5"
                    android:shadowColor="@color/colorPrimaryDark"
                    android:textColor="@color/full_textt_color"
                    android:textColorHint="@color/medium_text_color"
                    android:textSize="@dimen/_12sdp"
                    android:visibility="visible" />

                <ImageView
                    android:layout_width="@dimen/_13sdp"
                    android:layout_height="@dimen/_13sdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/arrow_right"
                    android:tint="@color/medium_text_color"
                    android:visibility="gone">

                </ImageView>

            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/bottom_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"

            android:layout_marginBottom="@dimen/_10sdp">


            <com.zeyalychat.com.utils.CustomButtonBold
                android:id="@+id/submit"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:background="@drawable/button_login"
                android:elevation="@dimen/_2sdp"
               android:textAllCaps="false"
                android:outlineAmbientShadowColor="@color/green"
                android:outlineSpotShadowColor="@color/green"
                android:text="@string/ApplyLeave"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp" />


        </RelativeLayout>
    </RelativeLayout>
</layout>
