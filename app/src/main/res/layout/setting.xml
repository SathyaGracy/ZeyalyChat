<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_ash">


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/contact_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@drawable/btn_lite_ash">

                    <RelativeLayout
                        android:id="@+id/image_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_10sdp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/profile"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:src="@mipmap/sample" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/profile_layout"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_80sdp">

                        <RelativeLayout
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/circlewhite"
                            android:elevation="@dimen/_1sdp"
                            android:visibility="gone">

                            <ImageView
                                android:id="@+id/kyc_update_img"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:src="@mipmap/ash_tick" />
                        </RelativeLayout>


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/contact_detail_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_5sdp"

                        android:layout_toRightOf="@+id/image_layout">

                        <com.zeyalychat.com.utils.CustomSemiBoldTextview
                            android:id="@+id/name_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="George wiliams"
                            android:textColor="@color/txt_bold_clor"
                            android:textSize="@dimen/_12sdp" />

                        <com.zeyalychat.com.utils.CustomSemiBoldTextview
                            android:id="@+id/number_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/name_txt"
                            android:layout_marginTop="7dp"
                            android:text="+91 9876543210"
                            android:textColor="@color/subcontebt_txt_color"
                            android:textSize="@dimen/_12sdp" />

                        <com.zeyalychat.com.utils.CustomSemiBoldTextview
                            android:id="@+id/email_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/number_txt"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:text="manikandan@gmail.com"
                            android:visibility="gone"
                            android:textColor="@color/subcontebt_txt_color"
                            android:textSize="@dimen/_12sdp" />

                    </RelativeLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp">

                    <ImageView
                        android:id="@+id/account_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/_5sdp"
                        android:visibility="gone" />

                    <com.zeyalychat.com.utils.CustomTextViewBold
                        android:id="@+id/account_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/account_img"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/App"
                        android:textColor="@color/full_textt_color"
                        android:textSize="@dimen/_12sdp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/account_Setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@drawable/btn_lite_ash">

                    <RelativeLayout
                        android:id="@+id/lt_R_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:padding="@dimen/_10sdp">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:padding="@dimen/_5sdp">

                            <com.zeyalychat.com.utils.CustomSemiBoldTextview
                                android:id="@+id/acc"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/Account_Settings"
                                android:textColor="@color/full_textt_color"
                                android:textSize="@dimen/_11sdp" />

                            <ImageView
                                android:layout_width="@dimen/_10sdp"
                                android:layout_height="@dimen/_10sdp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:src="@mipmap/arrow_right"
                                android:tint="@color/full_textt_color">

                            </ImageView>
                        </RelativeLayout>


                    </RelativeLayout>

                    <View
                        android:id="@+id/v1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_below="@+id/lt_R_profile"
                        android:background="@color/ViewColor" />

                    <RelativeLayout
                        android:id="@+id/lt_R_saved_Cards"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/v1"

                        android:padding="@dimen/_10sdp">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:padding="@dimen/_5sdp">

                            <com.zeyalychat.com.utils.CustomSemiBoldTextview
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/Notification_Sound"
                                android:textColor="@color/full_textt_color"
                                android:textSize="@dimen/_11sdp" />

                            <ImageView
                                android:layout_width="@dimen/_10sdp"
                                android:layout_height="@dimen/_10sdp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:src="@mipmap/arrow_right"
                                android:tint="@color/full_textt_color">

                            </ImageView>
                        </RelativeLayout>


                    </RelativeLayout>

                    <View
                        android:id="@+id/v8"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_below="@+id/lt_R_saved_Cards"
                        android:background="@color/ViewColor"
                        android:visibility="gone" />

                    <RelativeLayout
                        android:id="@+id/refer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/v8"

                        android:padding="@dimen/_10sdp"
                        android:visibility="gone">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:padding="@dimen/_5sdp">

                            <com.zeyalychat.com.utils.CustomSemiBoldTextview
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Referal"
                                android:textColor="@color/subcontebt_txt_color"
                                android:textSize="@dimen/_12sdp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:padding="@dimen/_5sdp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:src="@mipmap/arrow_right" />
                        </RelativeLayout>

                    </RelativeLayout>

                    <View
                        android:id="@+id/v2"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_below="@+id/refer"
                        android:background="@color/ViewColor" />

                    <RelativeLayout
                        android:id="@+id/lt_R_manage_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/v2"
                        android:visibility="gone"

                        android:padding="@dimen/_10sdp">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:padding="@dimen/_5sdp">

                            <com.zeyalychat.com.utils.CustomSemiBoldTextview
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Privacy"
                                android:textColor="@color/full_textt_color"
                                android:textSize="@dimen/_11sdp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:padding="@dimen/_5sdp">

                            <ImageView
                                android:layout_width="@dimen/_10sdp"
                                android:layout_height="@dimen/_10sdp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:src="@mipmap/arrow_right"
                                android:tint="@color/full_textt_color">

                            </ImageView>
                        </RelativeLayout>


                    </RelativeLayout>

                    <View
                        android:id="@+id/v3"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_below="@+id/lt_R_manage_address"
                        android:background="@color/ViewColor" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/sec"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                   >

                    <RelativeLayout
                        android:id="@+id/Security"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        >


                        <com.zeyalychat.com.utils.CustomTextViewBold
                            android:id="@+id/Security_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_5sdp"
                            android:text="Security"
                            android:textColor="@color/full_textt_color"
                            android:textSize="@dimen/_12sdp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/lt_R_fingerprint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/Security"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:background="@drawable/btn_lite_ash"
                        android:padding="@dimen/_10sdp">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:padding="@dimen/_5sdp">

                            <com.zeyalychat.com.utils.CustomSemiBoldTextview
                                android:id="@+id/b1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Biometric Authentication"
                                android:textColor="@color/full_textt_color"
                                android:textSize="@dimen/_11sdp" />

                            <com.zeyalychat.com.utils.CustomSemiBoldTextview
                                android:id="@+id/subbio"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/b1"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:text="Unlock with finger print"
                                android:textColor="@color/subcontebt_txt_color"
                                android:textSize="@dimen/_10sdp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:padding="@dimen/_5sdp">

                            <Switch
                                android:id="@+id/toggle_fingerPrint"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="false"
                                android:thumbTint="@color/colorPrimary"
                                android:track="@drawable/switchtrack" />
                        </RelativeLayout>


                    </RelativeLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/supportRl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                   >

                    <com.zeyalychat.com.utils.CustomTextViewBold
                        android:id="@+id/support_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:padding="@dimen/_5sdp"
                        android:text="@string/Support"
                        android:textColor="@color/full_textt_color"
                        android:textSize="@dimen/_12sdp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/support_Setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:background="@drawable/btn_lite_ash">
                    <RelativeLayout
                        android:id="@+id/lt_R_lan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:padding="@dimen/_10sdp">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:padding="@dimen/_5sdp">

                            <com.zeyalychat.com.utils.CustomSemiBoldTextview
                                android:id="@+id/languageTxt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/Language"
                                android:textColor="@color/full_textt_color"
                                android:textSize="@dimen/_11sdp" />

                            <ImageView
                                android:layout_width="@dimen/_10sdp"
                                android:layout_height="@dimen/_10sdp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:src="@mipmap/arrow_right"
                                android:tint="@color/full_textt_color">

                            </ImageView>
                        </RelativeLayout>


                    </RelativeLayout>


                    <View
                        android:id="@+id/vlan"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_below="@+id/lt_R_lan"
                        android:background="@color/ViewColor"
                        android:visibility="visible" />

                    <RelativeLayout
                        android:id="@+id/lt_R_support"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/vlan"

                        android:padding="@dimen/_10sdp">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:padding="@dimen/_5sdp">

                            <com.zeyalychat.com.utils.CustomSemiBoldTextview
                                android:id="@+id/supportTxt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/Contact_Support"
                                android:textColor="@color/full_textt_color"
                                android:textSize="@dimen/_11sdp" />
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                            </RelativeLayout>

                            <ImageView
                                android:layout_width="@dimen/_10sdp"
                                android:layout_height="@dimen/_10sdp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:src="@mipmap/arrow_right"
                                android:tint="@color/full_textt_color">

                            </ImageView>
                        </RelativeLayout>


                    </RelativeLayout>


                    <View
                        android:id="@+id/vd"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_below="@+id/lt_R_support"
                        android:background="@color/ViewColor"
                        android:visibility="visible" />


                    <RelativeLayout
                        android:id="@+id/lt_R_privacySupport"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/vd"

                        android:padding="@dimen/_10sdp">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:padding="@dimen/_5sdp">

                            <com.zeyalychat.com.utils.CustomSemiBoldTextview
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/Privacy"
                                android:textColor="@color/full_textt_color"
                                android:textSize="@dimen/_11sdp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:padding="@dimen/_5sdp">

                            <ImageView
                                android:layout_width="@dimen/_10sdp"
                                android:layout_height="@dimen/_10sdp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:src="@mipmap/arrow_right"
                                android:tint="@color/full_textt_color">

                            </ImageView>
                        </RelativeLayout>


                    </RelativeLayout>


                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/bottom_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@drawable/box_logout"
                    android:layout_marginBottom="@dimen/_30sdp">


                    <com.zeyalychat.com.utils.CustomSemiBoldTextview
                        android:id="@+id/log_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"


                        android:layout_centerInParent="true"
                        android:background="@drawable/box_logout"
                        android:text="@string/Logout"
                        android:textAllCaps="false"
                        android:textColor="@color/full_textt_color"
                        android:textSize="@dimen/_12sdp" />


                </RelativeLayout>
            </LinearLayout>

        </androidx.core.widget.NestedScrollView>




    </RelativeLayout>
</layout>
