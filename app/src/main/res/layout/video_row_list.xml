<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <RelativeLayout
            android:id="@+id/view_foreground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:background="?attr/selectableItemBackground"
                android:foreground="?attr/selectableItemBackground"
                android:layout_toRightOf="@+id/timeperiodLayout"
                android:padding="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_10sdp">
                <RelativeLayout
                    android:alpha="0.3"
                    android:background="@mipmap/sample_video_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </RelativeLayout>

                <RelativeLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.zeyalychat.com.utils.CustomTextViewBold
                        android:id="@+id/title"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:gravity="center"
                        android:padding="@dimen/_2sdp"
                        android:text="CHEMISTRY"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_10sdp" />
                    <com.zeyalychat.com.utils.CustomSemiBoldTextview
                        android:id="@+id/subtitletitle"
                        android:layout_width="wrap_content"
                        android:layout_below="@+id/title"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:gravity="center"
                        android:padding="@dimen/_2sdp"
                        android:visibility="gone"
                        android:text="CHEMISTRY"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_10sdp" />
                    <ImageView
                        android:src="@mipmap/play_button"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:tint="@color/colorPrimary"
                        android:layout_height="wrap_content">

                    </ImageView>
                </RelativeLayout>


            </androidx.cardview.widget.CardView>

        </RelativeLayout>
    </RelativeLayout>


</layout>