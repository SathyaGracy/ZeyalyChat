<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout


        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:elevation="@dimen/_10sdp"
        android:orientation="vertical"
        android:theme="@style/ThemeOverlay.AppCompat.Dark">


        <RelativeLayout
            android:id="@+id/navHeader"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/contact_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@color/colorPrimary">

                <RelativeLayout
                    android:id="@+id/image_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_5sdp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile"
                        app:civ_border_width="0.5dp"
                        app:civ_border_color="@color/ViewColor"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:src="@mipmap/sample" />


                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/contact_detail_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_5sdp"

                    android:layout_toRightOf="@+id/image_layout">

                    <com.zeyalychat.com.utils.CustomSemiBoldTextview
                        android:id="@+id/name_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="George wiliams"
                        android:textColor="@color/full_textt_color"
                        android:textSize="@dimen/_12sdp" />

                    <com.zeyalychat.com.utils.CustomSemiBoldTextview
                        android:id="@+id/number_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/name_txt"
                        android:visibility="visible"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:text="+91 9876543210"
                        android:textColor="@color/medium_text_color"
                        android:textSize="@dimen/_10sdp" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_toRightOf="@+id/contact_detail_layout"
                    android:visibility="visible"
                    android:id="@+id/remove_account"
                    android:gravity="right"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/_20sdp"

                    android:layout_centerHorizontal="true"
                    android:layout_marginRight="@dimen/_10sdp"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <com.zeyalychat.com.utils.CustomSemiBoldTextview
                        android:id="@+id/removeTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/remove_actl"
                        android:textColor="@color/red_color"
                        android:textSize="@dimen/_10sdp" />
                </RelativeLayout>


            </RelativeLayout>


            <View
                android:id="@+id/v1"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_below="@+id/contact_layout"
                android:background="@color/ViewColor" />




        </RelativeLayout>

    </RelativeLayout>
</layout>

