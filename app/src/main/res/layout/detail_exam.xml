<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<RelativeLayout
    android:background="@color/bg_ash"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/action_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/green"
            android:elevation="@dimen/_1sdp">


            <RelativeLayout
                android:id="@+id/act"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:elevation="@dimen/_2sdp">

                <RelativeLayout

                    android:id="@+id/backArraow"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/cart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:src="@mipmap/back_arrow_white"
                        android:tint="@color/colorPrimary" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/backArraow">

                    <com.zeyalychat.com.utils.CustomSemiBoldTextview
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:background="@android:color/transparent"
                        android:text="@string/exam"
                        android:textColor="@color/colorPrimary"
                        android:textColorHint="@color/green"
                        android:textSize="@dimen/_12sdp" />
                </RelativeLayout>


            </RelativeLayout>

            <View
                android:id="@+id/v1"
                android:layout_width="wrap_content"
                android:layout_height="1sp"
                android:layout_below="@+id/act"
                android:background="@color/receiver">

            </View>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/view_foreground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/action_bar_layout"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_5sdp"

            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@drawable/background_box">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"

                android:layout_marginBottom="@dimen/_5sdp"

                android:visibility="visible">

                <RelativeLayout
                    android:id="@+id/examday"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_40sdp"


                    android:layout_centerVertical="true"
                    android:background="@drawable/box_design_green"
                    android:visibility="gone">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:layout_marginBottom="@dimen/_3sdp">

                        <com.zeyalychat.com.utils.CustomTextViewBold
                            android:id="@+id/day"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"


                            android:text="24"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/_10sdp"
                            android:visibility="visible" />

                        <com.zeyalychat.com.utils.CustomTextViewBold
                            android:id="@+id/month"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/day"
                            android:layout_centerHorizontal="true"
                            android:text="May"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/_10sdp"
                            android:visibility="visible" />
                    </RelativeLayout>


                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/row_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:layout_toRightOf="@+id/examday">

                    <RelativeLayout
                        android:id="@+id/t1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardView"
                            android:layout_width="@dimen/_35sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            app:cardCornerRadius="@dimen/_1sdp">

                            <ImageView
                                android:id="@+id/calculatorImg"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center">

                            </ImageView>
                        </androidx.cardview.widget.CardView>

                        <RelativeLayout

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/cardView">

                            <com.zeyalychat.com.utils.CustomSemiBoldTextview
                                android:id="@+id/Syllabusname"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"


                                android:layout_marginLeft="@dimen/_5sdp"
                                android:text="CHEMISTRY"
                                android:textColor="@color/full_textt_color"
                                android:textSize="@dimen/_11sdp"
                                android:visibility="visible" />

                            <com.zeyalychat.com.utils.CustomTextViewRegular
                                android:id="@+id/examtype"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/Syllabusname"

                                android:layout_marginLeft="@dimen/_6sdp"


                                android:layout_marginTop="@dimen/_2sdp"
                                android:text="CHEMISTRY"
                                android:textColor="@color/medium_text_color"
                                android:textSize="@dimen/_8sdp"
                                android:visibility="visible" />
                        </RelativeLayout>


                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/eDateL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/t1"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:layout_marginTop="@dimen/_10sdp">

                        <RelativeLayout
                            android:id="@+id/dateLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/cal"
                                android:layout_width="@dimen/_10sdp"
                                android:layout_height="@dimen/_10sdp"
                                android:layout_centerVertical="true"
                                android:src="@mipmap/cal"
                                android:tint="@color/medium_text_color">

                            </ImageView>

                            <com.zeyalychat.com.utils.CustomSemiBoldTextview
                                android:id="@+id/date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_toRightOf="@+id/cal"
                                android:text="12-7-2021"
                                android:textColor="@color/medium_text_color"
                                android:textSize="@dimen/_10sdp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/examlayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true">


                            <ImageView
                                android:id="@+id/clock"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:src="@mipmap/clock"
                                android:tint="@color/medium_text_color">

                            </ImageView>


                            <com.zeyalychat.com.utils.CustomSemiBoldTextview
                                android:id="@+id/time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_3sdp"
                                android:layout_marginRight="@dimen/_5sdp"


                                android:layout_toRightOf="@+id/clock"
                                android:gravity="end"

                                android:text="10:00 am - 11:45 am"
                                android:textColor="@color/medium_text_color"
                                android:textSize="@dimen/_10sdp" />


                        </RelativeLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/eDateL"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:layout_marginTop="@dimen/_5sdp">

                        <RelativeLayout
                            android:id="@+id/lay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true">

                            <com.zeyalychat.com.utils.CustomSemiBoldTextview
                                android:id="@+id/totalmark"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Marks:"
                                android:textColor="@color/medium_text_color"
                                android:textSize="@dimen/_10sdp"
                                android:tint="@color/medium_text_color">

                            </com.zeyalychat.com.utils.CustomSemiBoldTextview>

                            <com.zeyalychat.com.utils.CustomSemiBoldTextview
                                android:id="@+id/mark"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5sdp"


                                android:layout_toRightOf="@+id/totalmark"

                                android:text="200"
                                android:textColor="@color/medium_text_color"
                                android:textSize="@dimen/_10sdp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/roomlayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">


                            <com.zeyalychat.com.utils.CustomSemiBoldTextview
                                android:id="@+id/roomno"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sub:"
                                android:textColor="@color/medium_text_color"
                                android:textSize="@dimen/_10sdp"
                                android:tint="@color/medium_text_color">

                            </com.zeyalychat.com.utils.CustomSemiBoldTextview>


                            <com.zeyalychat.com.utils.CustomSemiBoldTextview
                                android:id="@+id/SubTxt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_3sdp"
                                android:layout_marginRight="@dimen/_5sdp"


                                android:layout_toRightOf="@+id/roomno"
                                android:gravity="end"

                                android:text="8"
                                android:textColor="@color/medium_text_color"
                                android:textSize="@dimen/_10sdp" />


                        </RelativeLayout>
                    </RelativeLayout>

                </RelativeLayout>


            </RelativeLayout>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/browser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_8sdp"

            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@drawable/background_box">

            <WebView

                android:id="@+id/webview"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"

                android:layout_marginStart="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginEnd="@dimen/_3sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                tools:ignore="WebViewLayout" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/finishedRl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_8sdp"

            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@drawable/background_box">

            <RelativeLayout
                android:id="@+id/mURLR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_10sdp">

                <com.zeyalychat.com.utils.CustomSemiBoldTextview
                    android:id="@+id/finishedLbl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:text="Finished"
                    android:textColor="@color/full_textt_color"
                    android:textSize="@dimen/_12sdp" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"

                    android:layout_marginRight="@dimen/_5sdp"

                    android:background="@drawable/circle_finished">

                    <com.zeyalychat.com.utils.CustomSemiBoldTextview
                        android:id="@+id/finishedtxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:text="34"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_10sdp"
                        android:visibility="visible" />
                </RelativeLayout>

            </RelativeLayout>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/unfinishedRl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_8sdp"

            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@drawable/background_box">

            <RelativeLayout
                android:id="@+id/unmURLR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_10sdp">

                <com.zeyalychat.com.utils.CustomSemiBoldTextview
                    android:id="@+id/unfinishedLbl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:text="Unfinished"
                    android:textColor="@color/full_textt_color"
                    android:textSize="@dimen/_12sdp" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"

                    android:layout_marginRight="@dimen/_5sdp"

                    android:background="@drawable/circle_unfinished">

                    <com.zeyalychat.com.utils.CustomSemiBoldTextview
                        android:id="@+id/unfinishedTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:text="34"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_10sdp"
                        android:visibility="visible" />
                </RelativeLayout>

            </RelativeLayout>


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/fileData"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_150sdp"

            android:layout_marginLeft="@dimen/_5sdp"

            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/box_design"
            android:padding="@dimen/_10sdp">

            <ImageView
                android:id="@+id/fileImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </ImageView>

            <RelativeLayout
                android:id="@+id/fileUploadTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <ImageView
                    android:id="@+id/fileUploadTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/cloud"
                    android:tint="@color/medium_text_color"
                    android:visibility="visible" />

                <com.zeyalychat.com.utils.CustomSemiBoldTextview
                    android:id="@+id/chsfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/fileUploadTxt"
                    android:layout_centerHorizontal="true"
                    android:text="@string/chooseFile"
                    android:textColor="@color/medium_text_color"
                    android:visibility="visible">

                </com.zeyalychat.com.utils.CustomSemiBoldTextview>

            </RelativeLayout>


        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/bottom_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"


        android:layout_marginBottom="@dimen/_10sdp">


        <com.zeyalychat.com.utils.CustomButtonBold
            android:id="@+id/fileUpload"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:background="@drawable/button_login"
            android:elevation="@dimen/_2sdp"
            android:outlineAmbientShadowColor="@color/green"
            android:outlineSpotShadowColor="@color/green"
            android:text="@string/upload"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp" />


    </RelativeLayout>
</RelativeLayout>


</layout>
