<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<RelativeLayout
    android:layout_width="match_parent"
    android:background="@color/bg_ash"
    android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/action_bar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/green"
                android:elevation="@dimen/_1sdp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    android:elevation="@dimen/_2sdp"
                    android:visibility="visible">

                    <RelativeLayout

                        android:id="@+id/backArraow"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/cart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:tint="@color/colorPrimary"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:src="@mipmap/back_arrow_white" />
                    </RelativeLayout>

                    <com.zeyalychat.com.utils.CustomSemiBoldTextview
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:text="@string/Profile"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_12sdp" />
                </RelativeLayout>


            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/profile_lt_r"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_120sdp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/user" />

                    <RelativeLayout
                        android:id="@+id/profile_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">

                        <ImageView
                            android:id="@+id/profileimg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_70sdp"
                            android:layout_marginTop="@dimen/_60sdp"
                            android:src="@mipmap/camera_img" />
                    </RelativeLayout>


                </RelativeLayout>


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/_5sdp">

                <com.zeyalychat.com.utils.CustomTextViewBold
                    android:id="@+id/name_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="George wiliams"

                    android:textColor="@color/txt_bold_clor"
                    android:textSize="@dimen/_12sdp" />
                <RelativeLayout
                    android:layout_below="@+id/name_txt"
                    android:id="@+id/classandSection"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:id="@+id/classRL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <com.zeyalychat.com.utils.CustomSemiBoldTextview
                            android:id="@+id/Class_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginTop="@dimen/_5sdp"
                            android:gravity="center"
                            android:text="Class "
                            android:textColor="@color/subcontebt_txt_color"
                            android:textSize="@dimen/_12sdp" />
                        <com.zeyalychat.com.utils.CustomTextViewBold
                            android:id="@+id/Class_number_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/Class_txt"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:gravity="center"
                            android:text="10th"
                            android:textColor="@color/full_textt_color"
                            android:textSize="@dimen/_12sdp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_toRightOf="@+id/classRL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <com.zeyalychat.com.utils.CustomSemiBoldTextview
                            android:id="@+id/sec_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginTop="@dimen/_5sdp"
                            android:gravity="center"
                            android:text="@string/Section_w"
                            android:textColor="@color/subcontebt_txt_color"
                            android:textSize="@dimen/_12sdp" />
                        <com.zeyalychat.com.utils.CustomTextViewBold
                            android:id="@+id/sec_number_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/sec_txt"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:gravity="center"
                            android:text="B"
                            android:textColor="@color/full_textt_color"
                            android:textSize="@dimen/_12sdp" />
                    </RelativeLayout>
                </RelativeLayout>


            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp">

                <ImageView
                    android:id="@+id/account_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/_5sdp"
                    android:visibility="gone" />

                <com.zeyalychat.com.utils.CustomTextViewBold
                    android:id="@+id/account_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/account_img"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/Details"
                    android:textColor="@color/full_textt_color"
                    android:textSize="@dimen/_12sdp" />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/account_Setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="@drawable/btn_lite_ash">

                <RelativeLayout
                    android:id="@+id/lt_R_student"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/_5sdp">
                        <RelativeLayout
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_toRightOf="@+id/imgStudent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <com.zeyalychat.com.utils.CustomSemiBoldTextview
                                android:id="@+id/stdID"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/StudentID"
                                android:textColor="@color/medium_text_color"
                                android:textSize="@dimen/_11sdp" />
                            <com.zeyalychat.com.utils.CustomSemiBoldTextview
                                android:id="@+id/stdTxt"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:layout_below="@+id/stdID"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="xxxx"
                                android:textColor="@color/full_textt_color"
                                android:textSize="@dimen/_11sdp" />

                        </RelativeLayout>


                        <ImageView
                            android:id="@+id/imgStudent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/accountpic"
                            android:visibility="visible">

                        </ImageView>
                    </RelativeLayout>
                </RelativeLayout>
                <View
                    android:id="@+id/v1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_below="@+id/lt_R_student"
                    android:background="@color/ViewColor" />
                <RelativeLayout
                    android:id="@+id/dateOfBirthRl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_below="@+id/v1"
                    android:padding="@dimen/_10sdp">
                    <RelativeLayout
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_toRightOf="@+id/imgdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <com.zeyalychat.com.utils.CustomSemiBoldTextview
                            android:id="@+id/dateofbirth"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/DateOfBirth"
                            android:textColor="@color/medium_text_color"
                            android:textSize="@dimen/_11sdp" />
                        <com.zeyalychat.com.utils.CustomSemiBoldTextview
                            android:id="@+id/dateofbirthTxt"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_below="@+id/dateofbirth"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="xxxx"
                            android:textColor="@color/full_textt_color"
                            android:textSize="@dimen/_11sdp" />

                    </RelativeLayout>


                    <ImageView
                        android:id="@+id/imgdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/dateofbirthimg"
                        android:visibility="visible">

                    </ImageView>
                </RelativeLayout>
                <View
                    android:id="@+id/v2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_below="@+id/dateOfBirthRl"
                    android:background="@color/ViewColor" />
                <RelativeLayout
                    android:id="@+id/Blood_GroupRl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_below="@+id/v2"
                    android:padding="@dimen/_10sdp">
                    <RelativeLayout
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_toRightOf="@+id/imgBloodGroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <com.zeyalychat.com.utils.CustomSemiBoldTextview
                            android:id="@+id/BloodGroup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/BloodGroup"
                            android:textColor="@color/medium_text_color"
                            android:textSize="@dimen/_11sdp" />
                        <com.zeyalychat.com.utils.CustomSemiBoldTextview
                            android:id="@+id/BloodGroupTxt"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_below="@+id/BloodGroup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="xxxx"
                            android:textColor="@color/full_textt_color"
                            android:textSize="@dimen/_11sdp" />

                    </RelativeLayout>


                    <ImageView
                        android:id="@+id/imgBloodGroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/bloodtype"
                        android:visibility="visible">

                    </ImageView>
                </RelativeLayout>
                <View
                    android:id="@+id/v3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_below="@+id/Blood_GroupRl"
                    android:background="@color/ViewColor" />
                <RelativeLayout
                    android:id="@+id/AddressRl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_below="@+id/v3"
                    android:padding="@dimen/_10sdp">
                    <RelativeLayout
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_toRightOf="@+id/AddressImg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <com.zeyalychat.com.utils.CustomSemiBoldTextview
                            android:id="@+id/Address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/Address"
                            android:textColor="@color/medium_text_color"
                            android:textSize="@dimen/_11sdp" />
                        <com.zeyalychat.com.utils.CustomSemiBoldTextview
                            android:id="@+id/AddressTxt"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_below="@+id/Address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cecilia Chapman\n711-2880 Nulla St.\nMankato Mississippi 96522"
                            android:textColor="@color/full_textt_color"
                            android:textSize="@dimen/_11sdp" />

                    </RelativeLayout>


                    <ImageView
                        android:id="@+id/AddressImg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/addressimg"
                        android:visibility="visible">

                    </ImageView>
                </RelativeLayout>


            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp">

                <ImageView
                    android:id="@+id/parent_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/_5sdp"
                    android:visibility="gone" />

                <com.zeyalychat.com.utils.CustomTextViewBold
                    android:id="@+id/parent_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/parent_img"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/Parent"
                    android:textColor="@color/full_textt_color"
                    android:textSize="@dimen/_12sdp" />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/parent_Setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_30sdp"
                android:background="@drawable/btn_lite_ash">

                <RelativeLayout
                    android:id="@+id/lt_R_parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/_5sdp">
                        <RelativeLayout
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_toRightOf="@+id/parentStudent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <com.zeyalychat.com.utils.CustomSemiBoldTextview
                                android:id="@+id/parentID"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="David Richard"
                                android:textColor="@color/medium_text_color"
                                android:textSize="@dimen/_11sdp" />
                            <RelativeLayout
                                android:background="@drawable/box_corner_green"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_toRightOf="@+id/parentID"
                                android:layout_width="wrap_content"

                                android:layout_height="wrap_content">
                                <com.zeyalychat.com.utils.CustomSemiBoldTextview
                                    android:id="@+id/parentdathermother"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Father"
                                    android:layout_marginBottom="@dimen/_2sdp"
                                    android:layout_marginTop="@dimen/_2sdp"
                                    android:layout_marginRight="@dimen/_5sdp"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:textColor="@color/green"
                                    android:textSize="@dimen/_9sdp" />

                            </RelativeLayout>
                            <com.zeyalychat.com.utils.CustomSemiBoldTextview
                                android:id="@+id/parentTxt"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_below="@+id/parentID"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="+91 90981277610"
                                android:textColor="@color/full_textt_color"
                                android:textSize="@dimen/_11sdp" />

                        </RelativeLayout>


                        <ImageView
                            android:id="@+id/parentStudent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/profile_parent"
                            android:visibility="visible">

                        </ImageView>
                    </RelativeLayout>
                </RelativeLayout>



            </RelativeLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>

</layout>