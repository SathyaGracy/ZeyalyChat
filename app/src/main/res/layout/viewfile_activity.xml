<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_ash"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/action_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/green"
            android:elevation="@dimen/_1sdp">


            <RelativeLayout
                android:id="@+id/act"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:elevation="@dimen/_2sdp">

                <RelativeLayout

                    android:id="@+id/backArraow"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/cart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:src="@mipmap/back_arrow_white"
                        android:tint="@color/colorPrimary" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/backArraow">

                    <com.zeyalychat.com.utils.CustomSemiBoldTextview
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:background="@android:color/transparent"
                        android:text="@string/Add_exam"
                        android:visibility="gone"
                        android:textColor="@color/colorPrimary"
                        android:textColorHint="@color/green"
                        android:textSize="@dimen/_12sdp" />
                </RelativeLayout>


            </RelativeLayout>

            <View
                android:id="@+id/v1"
                android:layout_width="wrap_content"
                android:layout_height="1sp"
                android:layout_below="@+id/act"
                android:background="@color/receiver">

            </View>


        </RelativeLayout>
        <RelativeLayout
           android:id="@+id/tname"
            android:layout_margin="@dimen/_10sdp"
            android:layout_below="@+id/action_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.zeyalychat.com.utils.CustomSemiBoldTextview
                android:id="@+id/filename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="@android:color/transparent"
                android:text="@string/Add_exam"
                android:textColor="@color/medium_text_color"
                android:textColorHint="@color/green"
                android:textSize="@dimen/_12sdp" />


        </RelativeLayout>
        <RelativeLayout
            android:layout_below="@+id/tname"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:layout_width="match_parent"
            android:background="@drawable/box_design"
            android:layout_height="match_parent">

            <WebView
                android:id="@+id/webview"
                tools:ignore="WebViewLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginEnd="@dimen/_3sdp"
                android:layout_marginBottom="@dimen/_3sdp" />
        </RelativeLayout>

    </RelativeLayout>
</layout>
