<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"

                >


                <RelativeLayout
                    android:id="@+id/title_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp">

                    <RelativeLayout
                        android:id="@+id/close_layout"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_30sdp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/close_icon_black" />

                    </RelativeLayout>

                    <com.zeyalychat.com.utils.CustomSemiBoldTextview
                        android:id="@+id/subtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tittle_txt"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@android:color/transparent"
                        android:text="We will email you a link to reset your password"
                        android:textColor="@color/subcontebt_txt_color"
                        android:textSize="@dimen/_10sdp"
                        android:visibility="visible" />


                    <com.zeyalychat.com.utils.CustomTextViewBold
                        android:id="@+id/tittle_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/close_layout"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="@dimen/_40sdp"
                        android:text="@string/Forgotpassword"
                        android:textColor="@color/txt_bold_clor"
                        android:textSize="@dimen/_14sdp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title_layout"
                    android:layout_marginTop="@dimen/_50sdp">


                    <RelativeLayout
                        android:id="@+id/password_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="@dimen/_15sdp">


                        <View
                            android:id="@+id/v3"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_1sdp"
                            android:layout_below="@+id/password_edt"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@color/ViewColor" />


                        <com.zeyalychat.com.utils.CustomEditTextviewSemiLight
                            android:id="@+id/password_edt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@android:color/transparent"
                            android:hint="Enter your mail ID"
                            android:inputType="text"
                            android:maxLines="1"
                            android:minLines="1"
                            android:textColor="@color/txt_bold_clor"
                            android:textColorHint="@color/subcontebt_txt_color"
                            android:textSize="@dimen/_12sdp" />

                        <com.zeyalychat.com.utils.CustomSemiBoldTextview
                            android:id="@+id/error_txt_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/v3"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@android:color/transparent"
                            android:text="@string/userName"
                            android:textColor="@color/dark_red"
                            android:textSize="@dimen/_10sdp"
                            android:visibility="gone" />
                    </RelativeLayout>


                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/bottom_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"

                    android:layout_centerVertical="true"

                    android:layout_marginBottom="@dimen/_50sdp">

                    <RelativeLayout
                        android:id="@+id/send"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/circle_green">

                        <ImageView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:src="@mipmap/tick" />
                    </RelativeLayout>


                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>


    </RelativeLayout>
</layout>