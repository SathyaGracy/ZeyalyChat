<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        <androidx.core.widget.NestedScrollView
            android:layout_above="@+id/bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true">

                            <ImageView
                                android:id="@+id/logo"
                                android:layout_width="@dimen/_60sdp"
                                android:layout_height="@dimen/_60sdp"
                                android:src="@mipmap/logo" />

                            <com.zeyalychat.com.utils.CustomSemiBoldTextview
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_toRightOf="@+id/logo"
                                android:text="@string/app_name"
                                android:textColor="@color/full_textt_color"
                                android:textSize="@dimen/_16sdp"
                                android:visibility="gone" />

                        </RelativeLayout>


                        <RelativeLayout
                            android:id="@+id/title_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_60sdp">

                            <com.zeyalychat.com.utils.CustomSemiBoldTextview
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:gravity="center"
                                android:text="@string/signup"
                                android:textColor="@color/full_textt_color"
                                android:textSize="@dimen/_16sdp" />

                        </RelativeLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/title_layout"
                            android:layout_marginTop="@dimen/_20sdp">

                            <RelativeLayout
                                android:id="@+id/user_name_layout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">


                                <RelativeLayout
                                    android:id="@+id/user_edt_layout"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/title_username"

                                    android:layout_marginTop="@dimen/_5sdp"

                                    android:background="@drawable/box_design">

                                    <com.zeyalychat.com.utils.CustomEditTextviewSemiLight
                                        android:id="@+id/username_edt"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_5sdp"
                                        android:layout_marginTop="@dimen/_10sdp"
                                        android:layout_marginRight="@dimen/_5sdp"
                                        android:layout_marginBottom="@dimen/_10sdp"
                                        android:background="@android:color/transparent"
                                        android:hint="joshuva"
                                        android:inputType="text"
                                        android:maxLines="1"
                                        android:minLines="1"
                                        android:singleLine="true"
                                        android:textColor="@color/full_textt_color"
                                        android:textColorHint="@color/ViewColor"
                                        android:textSize="@dimen/_12sdp" />
                                </RelativeLayout>


                                <com.zeyalychat.com.utils.CustomSemiBoldTextview
                                    android:id="@+id/title_username"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/userName"
                                    android:textColor="@color/full_textt_color"
                                    android:textSize="@dimen/_12sdp" />

                                <com.zeyalychat.com.utils.CustomSemiBoldTextview
                                    android:id="@+id/error_txt_username"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/user_edt_layout"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:background="@android:color/transparent"
                                    android:text="User name"
                                    android:textColor="@color/dark_red"
                                    android:textSize="@dimen/_10sdp"
                                    android:visibility="gone" />
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_marginTop="@dimen/_15sdp"
                                android:id="@+id/email_layout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">


                                <RelativeLayout
                                    android:id="@+id/email_edt_layout"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/email_username"

                                    android:layout_marginTop="@dimen/_5sdp"

                                    android:background="@drawable/box_design">

                                    <com.zeyalychat.com.utils.CustomEditTextviewSemiLight
                                        android:id="@+id/email_edt"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_5sdp"
                                        android:layout_marginTop="@dimen/_10sdp"
                                        android:layout_marginRight="@dimen/_5sdp"
                                        android:layout_marginBottom="@dimen/_10sdp"
                                        android:background="@android:color/transparent"
                                        android:hint="geo@gmail.com"
                                        android:inputType="text"
                                        android:maxLines="1"
                                        android:minLines="1"
                                        android:singleLine="true"
                                        android:textColor="@color/full_textt_color"
                                        android:textColorHint="@color/ViewColor"
                                        android:textSize="@dimen/_12sdp" />
                                </RelativeLayout>


                                <com.zeyalychat.com.utils.CustomSemiBoldTextview
                                    android:id="@+id/email_username"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/EmailAddress"
                                    android:textColor="@color/full_textt_color"
                                    android:textSize="@dimen/_12sdp" />

                                <com.zeyalychat.com.utils.CustomSemiBoldTextview
                                    android:id="@+id/error_txt_email"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/email_edt_layout"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:background="@android:color/transparent"
                                    android:text="User name"
                                    android:textColor="@color/dark_red"
                                    android:textSize="@dimen/_10sdp"
                                    android:visibility="gone" />
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_marginTop="@dimen/_15sdp"
                                android:id="@+id/mobile_layout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">


                                <RelativeLayout
                                    android:id="@+id/mobile_edt_layout"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/mobile_username"

                                    android:layout_marginTop="@dimen/_5sdp"

                                    android:background="@drawable/box_design">

                                    <com.zeyalychat.com.utils.CustomEditTextviewSemiLight
                                        android:id="@+id/mobile_edt"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_5sdp"
                                        android:layout_marginTop="@dimen/_10sdp"
                                        android:layout_marginRight="@dimen/_5sdp"
                                        android:layout_marginBottom="@dimen/_10sdp"
                                        android:background="@android:color/transparent"
                                        android:hint="967854362"
                                        android:inputType="number"
                                        android:maxLines="1"
                                        android:minLines="1"
                                        android:singleLine="true"
                                        android:textColor="@color/full_textt_color"
                                        android:textColorHint="@color/ViewColor"
                                        android:textSize="@dimen/_12sdp" />
                                </RelativeLayout>


                                <com.zeyalychat.com.utils.CustomSemiBoldTextview
                                    android:id="@+id/mobile_username"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/mobileNo"
                                    android:textColor="@color/full_textt_color"
                                    android:textSize="@dimen/_12sdp" />

                                <com.zeyalychat.com.utils.CustomSemiBoldTextview
                                    android:id="@+id/error_txt_mobile"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/mobile_edt_layout"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:background="@android:color/transparent"
                                    android:text="User name"
                                    android:textColor="@color/dark_red"
                                    android:textSize="@dimen/_10sdp"
                                    android:visibility="gone" />
                            </RelativeLayout>


                            <RelativeLayout

                                android:id="@+id/password_layout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/user_name_layout"
                                android:layout_marginTop="@dimen/_15sdp">

                                <RelativeLayout
                                    android:id="@+id/password_edt_layout"
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/_40sdp"
                                    android:layout_below="@+id/title_password"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:background="@drawable/box_design">

                                    <RelativeLayout
                                        android:id="@+id/hide_show_layout"
                                        android:layout_width="@dimen/_30sdp"
                                        android:layout_height="match_parent"
                                        android:layout_alignParentRight="true">

                                        <ImageView
                                            android:id="@+id/hide_show_img"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerHorizontal="true"
                                            android:layout_centerVertical="true"
                                            android:layout_marginTop="@dimen/_10sdp"
                                            android:layout_marginRight="@dimen/_8sdp"
                                            android:src="@mipmap/hide_password"

                                            />
                                    </RelativeLayout>

                                    <com.zeyalychat.com.utils.CustomEditTextviewSemiLight
                                        android:id="@+id/password_edt"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_marginLeft="@dimen/_5sdp"
                                        android:layout_toStartOf="@+id/hide_show_layout"
                                        android:layout_toLeftOf="@+id/hide_show_layout"
                                        android:background="@android:color/transparent"
                                        android:hint="••••••••••••"
                                        android:inputType="textPassword"
                                        android:maxLines="1"
                                        android:minLines="1"
                                        android:textColor="@color/full_textt_color"
                                        android:textColorHint="@color/ViewColor"
                                        android:textSize="@dimen/_12sdp" />
                                </RelativeLayout>

                                <com.zeyalychat.com.utils.CustomSemiBoldTextview
                                    android:id="@+id/title_password"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Password"
                                    android:textColor="@color/full_textt_color"
                                    android:textSize="@dimen/_12sdp" />

                                <com.zeyalychat.com.utils.CustomSemiBoldTextview
                                    android:id="@+id/error_txt_password"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/password_edt_layout"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:background="@android:color/transparent"
                                    android:text="User Name"
                                    android:textColor="@color/dark_red"
                                    android:textSize="@dimen/_10sdp"
                                    android:visibility="gone" />
                            </RelativeLayout>
                            <RelativeLayout
                                android:id="@+id/confirm_password_layout"
                                android:layout_width="wrap_content"
                                android:layout_marginBottom="@dimen/_20sdp"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/user_name_layout"
                                android:layout_marginTop="@dimen/_15sdp">

                                <RelativeLayout
                                    android:id="@+id/confirm_edt_layout"
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/_40sdp"
                                    android:layout_below="@+id/confirm_title_password"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:background="@drawable/box_design">

                                    <RelativeLayout
                                        android:id="@+id/confirm_hide_show_layout"
                                        android:layout_width="@dimen/_30sdp"
                                        android:layout_height="match_parent"
                                        android:layout_alignParentRight="true">

                                        <ImageView
                                            android:id="@+id/confirm_hide_show_img"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerHorizontal="true"
                                            android:layout_centerVertical="true"
                                            android:layout_marginTop="@dimen/_10sdp"
                                            android:layout_marginRight="@dimen/_8sdp"
                                            android:src="@mipmap/hide_password"

                                            />
                                    </RelativeLayout>

                                    <com.zeyalychat.com.utils.CustomEditTextviewSemiLight
                                        android:id="@+id/confirm_password_edt"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_marginLeft="@dimen/_5sdp"
                                        android:layout_toStartOf="@+id/confirm_hide_show_layout"
                                        android:layout_toLeftOf="@+id/confirm_hide_show_layout"
                                        android:background="@android:color/transparent"
                                        android:hint="••••••••••••"
                                        android:inputType="textPassword"
                                        android:maxLines="1"
                                        android:minLines="1"
                                        android:textColor="@color/full_textt_color"
                                        android:textColorHint="@color/ViewColor"
                                        android:textSize="@dimen/_12sdp" />
                                </RelativeLayout>

                                <com.zeyalychat.com.utils.CustomSemiBoldTextview
                                    android:id="@+id/confirm_title_password"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/confirmPassword"
                                    android:textColor="@color/full_textt_color"
                                    android:textSize="@dimen/_12sdp" />

                                <com.zeyalychat.com.utils.CustomSemiBoldTextview
                                    android:id="@+id/error_txt_confirm_password"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/confirm_edt_layout"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:background="@android:color/transparent"
                                    android:text="User Name"
                                    android:textColor="@color/dark_red"
                                    android:textSize="@dimen/_10sdp"
                                    android:visibility="gone" />
                            </RelativeLayout>




                        </LinearLayout>
                    </RelativeLayout>


                </RelativeLayout>


            </RelativeLayout>

        </androidx.core.widget.NestedScrollView>
        <RelativeLayout
            android:id="@+id/bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"

            android:layout_marginBottom="@dimen/_10sdp">


            <com.zeyalychat.com.utils.CustomButtonBold
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_centerInParent="true"
                android:text="@string/signup"
                android:background="@drawable/button_login"
                android:textColor="@color/white"
                android:id="@+id/signup_layout"
                android:textAllCaps="false"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:elevation="@dimen/_2sdp"
                android:outlineAmbientShadowColor="@color/green"
                android:outlineSpotShadowColor="@color/green"
                android:textSize="@dimen/_12sdp" />
            <RelativeLayout
                android:id="@+id/signinLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_below="@+id/signup_layout"
                android:layout_centerHorizontal="true"

                android:padding="@dimen/_5sdp">

                <com.zeyalychat.com.utils.CustomSemiBoldTextview
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="@string/already_have_acc"
                    android:textColor="@color/full_textt_color"
                    android:textSize="@dimen/_10sdp" />


                <com.zeyalychat.com.utils.CustomSemiBoldTextview
                    android:id="@+id/signIN"
                    android:layout_toRightOf="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_centerHorizontal="true"
                    android:text="@string/login"
                    android:textColor="@color/green"
                    android:textSize="@dimen/_10sdp" />


            </RelativeLayout>





        </RelativeLayout>






    </RelativeLayout>
</layout>