<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_ash"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/action_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/green"

            android:elevation="@dimen/_1sdp">


            <RelativeLayout
                android:id="@+id/act"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:elevation="@dimen/_2sdp">

                <RelativeLayout

                    android:id="@+id/backArraow"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/cart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:src="@mipmap/back_arrow_white"
                        android:tint="@color/colorPrimary" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/backArraow">

                    <com.zeyalychat.com.utils.CustomSemiBoldTextview
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"

                        android:background="@android:color/transparent"
                        android:text="@string/AddHomeWork"
                        android:textColor="@color/colorPrimary"
                        android:textColorHint="@color/colorPrimary"
                        android:textSize="@dimen/_12sdp" />
                </RelativeLayout>


            </RelativeLayout>

            <View
                android:id="@+id/v1"
                android:layout_width="wrap_content"
                android:layout_height="1sp"
                android:layout_below="@+id/act"
                android:background="@color/receiver">

            </View>


        </RelativeLayout>
        <androidx.core.widget.NestedScrollView
            android:layout_below="@+id/action_bar_layout"
            android:layout_above="@+id/bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/home_L"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/action_bar_layout"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"

                android:orientation="vertical"
                android:visibility="visible">

                <RelativeLayout
                    android:id="@+id/TypeLBLLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:visibility="visible">

                    <RelativeLayout
                        android:id="@+id/TypeRl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="@dimen/_10sdp">

                        <com.zeyalychat.com.utils.CustomTextViewSemiLight
                            android:id="@+id/TypeLBl"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="wrap_content"
                            android:text="@string/Type"
                            android:textColor="@color/full_textt_color"
                            android:textSize="@dimen/_12sdp"
                            android:visibility="visible" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/TypeLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_toRightOf="@+id/TypeRl"
                        android:background="@drawable/box_design"
                        android:padding="@dimen/_10sdp">

                        <com.zeyalychat.com.utils.CustomSemiBoldTextview
                            android:id="@+id/SelectTypeTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:background="@android:color/transparent"
                            android:hint="Select Home Work"
                            android:shadowColor="@color/colorPrimaryDark"
                            android:textColor="@color/full_textt_color"
                            android:textColorHint="@color/medium_text_color"
                            android:textSize="@dimen/_12sdp"
                            android:visibility="visible" />

                        <ImageView
                            android:layout_width="@dimen/_13sdp"
                            android:layout_height="@dimen/_13sdp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/arrow_right"
                            android:tint="@color/medium_text_color"
                            android:visibility="visible">

                        </ImageView>

                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/TitleLBLLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:visibility="visible">

                    <RelativeLayout
                        android:id="@+id/TitleRl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="@dimen/_10sdp">

                        <com.zeyalychat.com.utils.CustomTextViewSemiLight
                            android:id="@+id/TitleLBl"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="wrap_content"
                            android:text="@string/Title"
                            android:textColor="@color/full_textt_color"
                            android:textSize="@dimen/_12sdp"
                            android:visibility="visible" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/TitleLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_toRightOf="@+id/TitleRl"
                        android:background="@drawable/box_design"
                        android:padding="@dimen/_10sdp">

                        <com.zeyalychat.com.utils.CustomEditTextviewSemiLight
                            android:id="@+id/TitleTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:background="@android:color/transparent"
                            android:hint=""
                            android:shadowColor="@color/colorPrimaryDark"
                            android:textColor="@color/full_textt_color"
                            android:textColorHint="@color/medium_text_color"
                            android:textSize="@dimen/_12sdp"
                            android:visibility="visible" />

                        <ImageView
                            android:layout_width="@dimen/_13sdp"
                            android:layout_height="@dimen/_13sdp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/arrow_right"
                            android:tint="@color/medium_text_color"
                            android:visibility="gone">

                        </ImageView>

                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/ToLBLLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:visibility="visible">

                    <RelativeLayout
                        android:id="@+id/ToRl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="@dimen/_10sdp">

                        <com.zeyalychat.com.utils.CustomTextViewSemiLight
                            android:id="@+id/ToLBl"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="wrap_content"
                            android:text="@string/To"
                            android:textColor="@color/full_textt_color"
                            android:textSize="@dimen/_12sdp"
                            android:visibility="visible" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/ToLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_toRightOf="@+id/ToRl"
                        android:background="@drawable/box_design"
                        android:padding="@dimen/_10sdp">

                        <com.zeyalychat.com.utils.CustomSemiBoldTextview
                            android:id="@+id/SelectSectionTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:background="@android:color/transparent"
                            android:hint="@string/SelectSection"
                            android:shadowColor="@color/colorPrimaryDark"
                            android:textColor="@color/full_textt_color"
                            android:textColorHint="@color/medium_text_color"
                            android:textSize="@dimen/_12sdp"
                            android:visibility="visible" />

                        <ImageView
                            android:layout_width="@dimen/_13sdp"
                            android:layout_height="@dimen/_13sdp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/arrow_right"
                            android:tint="@color/medium_text_color"
                            android:visibility="visible">

                        </ImageView>

                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/SubjectLBLLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:visibility="visible">

                    <RelativeLayout
                        android:id="@+id/SubjectRl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="@dimen/_10sdp">

                        <com.zeyalychat.com.utils.CustomTextViewSemiLight
                            android:id="@+id/SubjectLBl"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="wrap_content"
                            android:text="@string/Subject"
                            android:textColor="@color/full_textt_color"
                            android:textSize="@dimen/_12sdp"
                            android:visibility="visible" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/SubjectLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_toRightOf="@+id/SubjectRl"
                        android:background="@drawable/box_design"
                        android:padding="@dimen/_10sdp">

                        <com.zeyalychat.com.utils.CustomSemiBoldTextview
                            android:id="@+id/SelectSubjectTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:background="@android:color/transparent"
                            android:hint="@string/SelectSubject"
                            android:shadowColor="@color/colorPrimaryDark"
                            android:textColor="@color/full_textt_color"
                            android:textColorHint="@color/medium_text_color"
                            android:textSize="@dimen/_12sdp"
                            android:visibility="visible" />

                        <ImageView
                            android:layout_width="@dimen/_13sdp"
                            android:layout_height="@dimen/_13sdp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/arrow_right"
                            android:tint="@color/medium_text_color"
                            android:visibility="visible">

                        </ImageView>

                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/CompletionDateRl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp">

                    <RelativeLayout
                        android:id="@+id/CompletionDateLBL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="@dimen/_10sdp">

                        <com.zeyalychat.com.utils.CustomTextViewSemiLight
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="wrap_content"
                            android:text="@string/CompletionDate"
                            android:textColor="@color/full_textt_color"
                            android:textSize="@dimen/_12sdp"
                            android:visibility="visible" />

                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/CompletionDateLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_toRightOf="@+id/CompletionDateLBL"
                        android:background="@drawable/box_design"
                        android:padding="@dimen/_10sdp">

                        <com.zeyalychat.com.utils.CustomSemiBoldTextview
                            android:id="@+id/CompletionDateTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:background="@android:color/transparent"
                            android:hint="@string/ddmmyyyy"
                            android:shadowColor="@color/colorPrimaryDark"
                            android:textColor="@color/full_textt_color"
                            android:textColorHint="@color/medium_text_color"
                            android:textSize="@dimen/_12sdp"
                            android:visibility="visible" />

                        <ImageView
                            android:layout_width="@dimen/_13sdp"
                            android:layout_height="@dimen/_13sdp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/cal"
                            android:tint="@color/medium_text_color"
                            android:visibility="visible">

                        </ImageView>

                    </RelativeLayout>

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/ExamLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:visibility="visible">

                    <RelativeLayout
                        android:id="@+id/fileUploadRl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"

                        android:layout_marginTop="@dimen/_10sdp">

                        <com.zeyalychat.com.utils.CustomTextViewSemiLight
                            android:id="@+id/fileUploadRLBl"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="wrap_content"
                            android:text="@string/Attachments"
                            android:textColor="@color/full_textt_color"
                            android:textSize="@dimen/_12sdp"
                            android:visibility="visible" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/fileUpload"
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="@dimen/_150sdp"

                        android:layout_below="@+id/fileUploadRl"

                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/box_design"
                        android:padding="@dimen/_10sdp">
                        <ImageView
                            android:id="@+id/fileImage"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                        </ImageView>
                        <RelativeLayout
                            android:id="@+id/fileUploadTheme"
                            android:layout_centerInParent="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/fileUploadTxt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:src="@mipmap/cloud"
                                android:tint="@color/medium_text_color"
                                android:visibility="visible" />

                            <com.zeyalychat.com.utils.CustomSemiBoldTextview
                                android:id="@+id/chsfile"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/fileUploadTxt"
                                android:layout_centerHorizontal="true"
                                android:text="@string/chooseFile"
                                android:textColor="@color/medium_text_color"
                                android:visibility="visible">


                            </com.zeyalychat.com.utils.CustomSemiBoldTextview>

                        </RelativeLayout>


                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/DescreptionLBLLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:visibility="visible">

                    <RelativeLayout
                        android:id="@+id/DescreptionRl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="@dimen/_10sdp">

                        <com.zeyalychat.com.utils.CustomTextViewSemiLight
                            android:id="@+id/DescreptionLBl"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="wrap_content"
                            android:text="@string/Descreption"
                            android:textColor="@color/full_textt_color"
                            android:textSize="@dimen/_12sdp"
                            android:visibility="visible" />

                    </RelativeLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/DescreptionLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/box_design"
                    android:padding="@dimen/_10sdp">

                    <com.zeyalychat.com.utils.CustomEditTextviewSemiLight
                        android:id="@+id/DescreptionTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:background="@android:color/transparent"
                        android:hint=""
                        android:maxLines="4"
                        android:shadowColor="@color/colorPrimaryDark"
                        android:textColor="@color/full_textt_color"
                        android:textColorHint="@color/medium_text_color"
                        android:textSize="@dimen/_12sdp"
                        android:visibility="visible" />

                    <ImageView
                        android:layout_width="@dimen/_13sdp"
                        android:layout_height="@dimen/_13sdp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/arrow_right"
                        android:tint="@color/medium_text_color"
                        android:visibility="gone">

                    </ImageView>

                </RelativeLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>



        <RelativeLayout
            android:id="@+id/bottom_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"

            android:layout_marginBottom="@dimen/_10sdp">


            <com.zeyalychat.com.utils.CustomButtonBold
                android:id="@+id/submit"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:background="@drawable/button_login"
                android:elevation="@dimen/_2sdp"
                android:textAllCaps="false"
                android:outlineAmbientShadowColor="@color/green"
                android:outlineSpotShadowColor="@color/green"
                android:text="@string/Submit"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp" />


        </RelativeLayout>
    </RelativeLayout>
</layout>
