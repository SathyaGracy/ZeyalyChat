<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_white"
        android:orientation="vertical">


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"

            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/maincloseLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp">

                        <com.zeyalychat.com.utils.CustomSemiBoldTextview
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:text="@string/Profile"

                            android:textColor="@color/full_textt_color"
                            android:textSize="@dimen/_13sdp"
                            android:visibility="gone" />

                        <RelativeLayout
                            android:id="@+id/close_layout"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:padding="@dimen/_5sdp">

                            <ImageView
                                android:id="@+id/back_arraow"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:src="@mipmap/close_dilaog" />
                        </RelativeLayout>
                    </RelativeLayout>

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginBottom="@dimen/_25sdp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/add_account_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">





                        <RelativeLayout
                            android:id="@+id/contact_detail_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_10sdp"


                            android:layout_toRightOf="@+id/image_layout">

                            <com.zeyalychat.com.utils.CustomSemiBoldTextview
                                android:id="@+id/name_txt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/add_another_account"
                                android:textColor="@color/medium_text_color"
                                android:textSize="@dimen/_10sdp" />



                        </RelativeLayout>



                    </RelativeLayout>




                </RelativeLayout>
            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </RelativeLayout>
</layout>
