<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_ash">

        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/action_bar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/green"
                android:elevation="@dimen/_1sdp">


                <RelativeLayout
                    android:id="@+id/act"
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    android:elevation="@dimen/_2sdp">

                    <RelativeLayout

                        android:id="@+id/backArraow"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/cart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:src="@mipmap/back_arrow_white"
                            android:tint="@color/colorPrimary" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/backArraow">

                        <com.zeyalychat.com.utils.CustomSemiBoldTextview
                            android:id="@+id/title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:background="@android:color/transparent"
                            android:text="@string/exam"
                            android:textColor="@color/colorPrimary"
                            android:textColorHint="@color/green"
                            android:textSize="@dimen/_12sdp" />
                    </RelativeLayout>


                </RelativeLayout>

                <View
                    android:id="@+id/v1"
                    android:layout_width="wrap_content"
                    android:layout_height="1sp"
                    android:layout_below="@+id/act"
                    android:background="@color/receiver">

                </View>


            </RelativeLayout>

            <RelativeLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/eDateL"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp">

                <RelativeLayout
                    android:id="@+id/lay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_alignParentRight="true">

                    <com.zeyalychat.com.utils.CustomSemiBoldTextview
                        android:id="@+id/totalcount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/full_textt_color"
                        android:textSize="@dimen/_11sdp"
                        android:tint="@color/medium_text_color">

                    </com.zeyalychat.com.utils.CustomSemiBoldTextview>

                    <com.zeyalychat.com.utils.CustomSemiBoldTextview
                        android:id="@+id/mark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"

                        android:layout_toRightOf="@+id/totalcount"
                        android:text="200"

                        android:textColor="@color/medium_text_color"
                        android:textSize="@dimen/_10sdp"
                        android:visibility="gone" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/roomlayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <com.zeyalychat.com.utils.CustomTextViewRegular
                        android:id="@+id/statustitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Finished"
                        android:textColor="@color/full_textt_color"
                        android:textSize="@dimen/_11sdp"
                        android:tint="@color/full_textt_color">

                    </com.zeyalychat.com.utils.CustomTextViewRegular>


                    <com.zeyalychat.com.utils.CustomSemiBoldTextview
                        android:id="@+id/SubTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:layout_marginRight="@dimen/_5sdp"

                        android:layout_toRightOf="@+id/statustitle"
                        android:gravity="end"
                        android:text="8"

                        android:textColor="@color/medium_text_color"
                        android:textSize="@dimen/_10sdp"
                        android:visibility="gone" />


                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/dataRl"
                android:visibility="visible"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:background="@drawable/box_design"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"

                    android:layout_height="match_parent">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="@dimen/_10sdp">

                    </androidx.recyclerview.widget.RecyclerView>
                </RelativeLayout>



            </RelativeLayout>


        </LinearLayout>
        <RelativeLayout
            android:id="@+id/noDataLayout"
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.zeyalychat.com.utils.CustomSemiBoldTextview


                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="No Data Found"
                android:textColor="@color/full_textt_color"
                android:textSize="@dimen/_12sdp">

            </com.zeyalychat.com.utils.CustomSemiBoldTextview>
        </RelativeLayout>

    </RelativeLayout>


</layout>
