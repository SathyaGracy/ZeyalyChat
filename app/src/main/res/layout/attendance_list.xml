<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_ash"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/action_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/green"
            android:elevation="@dimen/_1sdp">


            <RelativeLayout
                android:id="@+id/act"

                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:elevation="@dimen/_2sdp">

                <RelativeLayout

                    android:id="@+id/backArraow"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/cart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:src="@mipmap/back_arrow_white"
                        android:tint="@color/colorPrimary" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/backArraow">

                    <com.zeyalychat.com.utils.CustomSemiBoldTextview
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:background="@android:color/transparent"
                        android:text="@string/Attendance"
                        android:textColor="@color/colorPrimary"
                        android:textColorHint="@color/green"
                        android:textSize="@dimen/_12sdp" />
                </RelativeLayout>


            </RelativeLayout>

            <View
                android:id="@+id/v1"
                android:layout_width="wrap_content"
                android:layout_height="1sp"
                android:layout_below="@+id/act"
                android:background="@color/receiver">

            </View>


        </RelativeLayout>
        <LinearLayout
            android:id="@+id/l1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@+id/action_bar_layout"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:orientation="horizontal"
            android:weightSum="2">

            <RelativeLayout
                android:id="@+id/ToLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/box_design"
                android:padding="@dimen/_10sdp">

                <com.zeyalychat.com.utils.CustomSemiBoldTextview
                    android:id="@+id/SelectSectionTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:background="@android:color/transparent"
                    android:hint="@string/SelectSection"
                    android:shadowColor="@color/colorPrimaryDark"
                    android:textColor="@color/full_textt_color"
                    android:textColorHint="@color/medium_text_color"
                    android:textSize="@dimen/_12sdp"
                    android:visibility="visible" />

                <ImageView
                    android:layout_width="@dimen/_13sdp"
                    android:layout_height="@dimen/_13sdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/arrow_right"
                    android:tint="@color/medium_text_color"
                    android:visibility="visible">

                </ImageView>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/DateRl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">


                <RelativeLayout
                    android:id="@+id/DateLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:background="@drawable/box_design"
                    android:padding="@dimen/_10sdp">

                    <com.zeyalychat.com.utils.CustomSemiBoldTextview
                        android:id="@+id/DateTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:background="@android:color/transparent"
                        android:hint="@string/ddmmyyyy"
                        android:shadowColor="@color/colorPrimaryDark"
                        android:textColor="@color/full_textt_color"
                        android:textColorHint="@color/medium_text_color"
                        android:textSize="@dimen/_12sdp"
                        android:visibility="visible" />

                    <ImageView
                        android:layout_width="@dimen/_13sdp"
                        android:layout_height="@dimen/_13sdp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/cal"
                        android:tint="@color/medium_text_color"
                        android:visibility="visible">

                    </ImageView>

                </RelativeLayout>

            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/l1"
            android:background="@drawable/background_white"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/L2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal"

                android:weightSum="4">

                <com.zeyalychat.com.utils.CustomTextViewBold
                    android:id="@+id/nameTxt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_weight="2"
                    android:gravity="left"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:padding="@dimen/_2sdp"
                    android:text="@string/Name"
                    android:textColor="@color/medium_text_color"
                    android:textSize="@dimen/_12sdp" />

                <com.zeyalychat.com.utils.CustomTextViewBold
                    android:id="@+id/morningsessiontxt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/title"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/MorningSession"
                    android:textColor="@color/medium_text_color"
                    android:textSize="@dimen/_12sdp"
                    android:visibility="visible" />

                <com.zeyalychat.com.utils.CustomTextViewBold
                    android:id="@+id/afternoonsessionTxt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/_2sdp"
                    android:text="@string/NoonSession"
                    android:textColor="@color/medium_text_color"
                    android:textSize="@dimen/_11sdp" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginLeft="@dimen/_5sdp"

                android:layout_marginRight="@dimen/_5sdp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </androidx.recyclerview.widget.RecyclerView>

                <RelativeLayout
                    android:id="@+id/fablayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_marginRight="@dimen/_5sdp">

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/fab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginRight="@dimen/_7sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:src="@mipmap/add"
                        android:tint="@color/colorPrimary"

                        android:visibility="visible"
                        app:backgroundTint="@color/green" />


                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/noDataLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <com.zeyalychat.com.utils.CustomSemiBoldTextview


                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="No Data Found"
                android:textColor="@color/full_textt_color"
                android:textSize="@dimen/_12sdp">

            </com.zeyalychat.com.utils.CustomSemiBoldTextview>
        </RelativeLayout>

    </RelativeLayout>
</layout>
