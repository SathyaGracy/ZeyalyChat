<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp">


                <RelativeLayout
                    android:id="@+id/title_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_40sdp">

                    <RelativeLayout
                        android:id="@+id/close_layout"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_30sdp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/close_icon_black" />

                    </RelativeLayout>

                    <com.zeyalychat.com.utils.CustomTextViewBold
                        android:id="@+id/tittle_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/close_layout"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="@string/enter_otp"
                        android:textColor="@color/txt_bold_clor"
                        android:textSize="@dimen/_14sdp" />


                    <com.zeyalychat.com.utils.CustomSemiBoldTextview
                        android:id="@+id/subtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tittle_txt"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@android:color/transparent"
                        android:text="@string/otp"
                        android:textColor="@color/subcontebt_txt_color"
                        android:textSize="@dimen/_10sdp"
                        android:visibility="visible" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title_layout"
                    android:layout_marginTop="@dimen/_50sdp">
                    <com.zeyalychat.com.utils.CustomSemiBoldTextview
                        android:id="@+id/timer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@android:color/transparent"
                        android:textColor="@color/dark_red"
                        android:textSize="@dimen/_10sdp"
                        android:visibility="visible" />

                    <RelativeLayout
                        android:id="@+id/password_layout"
                        android:layout_below="@+id/timer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15sdp">

                        <LinearLayout
                            android:id="@+id/layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:background="@drawable/box_white_solid">

                                <com.zeyalychat.com.utils.CustomEditTextviewSemiLight
                                    android:id="@+id/otp1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@android:color/transparent"
                                    android:gravity="center"
                                    android:inputType="number"
                                    android:maxLength="1"
                                    android:maxLines="1"
                                    android:minLines="1"
                                    android:textColor="@color/txt_bold_clor"
                                    android:textColorHint="@color/add_bank_color"
                                    android:textSize="@dimen/_12sdp" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:background="@drawable/box_white_solid">

                                <com.zeyalychat.com.utils.CustomEditTextviewSemiLight
                                    android:id="@+id/otp2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@android:color/transparent"
                                    android:gravity="center"
                                    android:inputType="number"
                                    android:maxLength="1"
                                    android:maxLines="1"
                                    android:minLines="1"
                                    android:textColor="@color/txt_bold_clor"
                                    android:textColorHint="@color/add_bank_color"
                                    android:textSize="@dimen/_12sdp" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:background="@drawable/box_white_solid">

                                <com.zeyalychat.com.utils.CustomEditTextviewSemiLight
                                    android:id="@+id/otp3"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"

                                    android:background="@android:color/transparent"
                                    android:gravity="center"
                                    android:inputType="number"
                                    android:maxLength="1"
                                    android:maxLines="1"
                                    android:minLines="1"
                                    android:textColor="@color/txt_bold_clor"
                                    android:textColorHint="@color/add_bank_color"
                                    android:textSize="@dimen/_12sdp" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:background="@drawable/box_white_solid">

                                <com.zeyalychat.com.utils.CustomEditTextviewSemiLight
                                    android:id="@+id/otp4"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"

                                    android:background="@android:color/transparent"
                                    android:gravity="center"
                                    android:inputType="number"
                                    android:maxLength="1"
                                    android:maxLines="1"
                                    android:minLines="1"
                                    android:textColor="@color/txt_bold_clor"
                                    android:textColorHint="@color/add_bank_color"
                                    android:textSize="@dimen/_12sdp" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:background="@drawable/box_white_solid">

                                <com.zeyalychat.com.utils.CustomEditTextviewSemiLight
                                    android:id="@+id/otp5"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@android:color/transparent"
                                    android:gravity="center"
                                    android:inputType="number"
                                    android:maxLength="1"
                                    android:maxLines="1"
                                    android:minLines="1"
                                    android:textColor="@color/txt_bold_clor"
                                    android:textColorHint="@color/add_bank_color"
                                    android:textSize="@dimen/_12sdp" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:background="@drawable/box_white_solid">

                                <com.zeyalychat.com.utils.CustomEditTextviewSemiLight
                                    android:id="@+id/otp6"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@android:color/transparent"
                                    android:gravity="center"
                                    android:inputType="number"
                                    android:maxLength="1"
                                    android:maxLines="1"
                                    android:minLines="1"
                                    android:textColor="@color/txt_bold_clor"
                                    android:textColorHint="@color/add_bank_color"
                                    android:textSize="@dimen/_12sdp" />
                            </RelativeLayout>


                        </LinearLayout>


                        <com.zeyalychat.com.utils.CustomSemiBoldTextview
                            android:id="@+id/error_txt_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/layout"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@android:color/transparent"
                            android:text="@string/userName"
                            android:textColor="@color/dark_red"
                            android:textSize="@dimen/_10sdp"
                            android:visibility="gone" />
                    </RelativeLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true">

                    <RelativeLayout
                        android:id="@+id/bottom_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_20sdp">

                        <RelativeLayout
                            android:id="@+id/send"
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/circle_green">

                            <ImageView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:src="@mipmap/tick" />
                        </RelativeLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/resend_otp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/bottom_layout"
                        android:layout_marginBottom="@dimen/_30sdp">

                        <com.zeyalychat.com.utils.CustomSemiBoldTextview
                            android:id="@+id/text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@android:color/transparent"
                            android:text="@string/receive_otp"
                            android:textColor="@color/subcontebt_txt_color"
                            android:textSize="@dimen/_10sdp"
                            android:visibility="visible" />

                        <com.zeyalychat.com.utils.CustomSemiBoldTextview
                            android:id="@+id/resend"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/text"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@android:color/transparent"
                            android:text="@string/resend_Code"
                            android:textColor="@color/green"
                            android:textSize="@dimen/_10sdp"
                            android:visibility="visible" />
                    </RelativeLayout>
                </RelativeLayout>

            </RelativeLayout>
        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>
</layout>