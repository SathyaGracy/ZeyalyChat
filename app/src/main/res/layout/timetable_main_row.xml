<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/view_foreground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_10sdp"
            >

            <RelativeLayout
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_toRightOf="@+id/timeperiodLayout"
                app:cardCornerRadius="@dimen/_5sdp">

                <RelativeLayout
                    android:id="@+id/cardLayout"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:id="@+id/view_layout"
                        android:layout_width="wrap_content"
                        android:visibility="gone"
                        android:layout_height="match_parent">

                        <View
                            android:id="@+id/v1"
                            android:layout_width="@dimen/_8sdp"
                            android:layout_height="@dimen/_8sdp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_10sdp"


                            android:background="@color/green">

                        </View>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_centerInParent="true"
                        android:layout_toRightOf="@+id/view_layout"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:id="@+id/nameRl"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"


                            android:visibility="visible">


                            <com.zeyalychat.com.utils.CustomSemiBoldTextview
                                android:id="@+id/title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:padding="@dimen/_2sdp"
                                android:text="Tamil"
                                android:textColor="@color/full_textt_color"
                                android:textSize="@dimen/_11sdp"
                                android:visibility="visible" />


                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/syllabusname"
                            android:layout_below="@+id/nameRl"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="visible">


                            <com.zeyalychat.com.utils.CustomSemiBoldTextview
                                android:id="@+id/tutorname"

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5sdp"

                                android:padding="@dimen/_2sdp"
                                android:text="Manikanda kumaresan"
                                android:textColor="@color/medium_text_color"
                                android:textSize="@dimen/_9sdp"
                                android:visibility="visible" />


                        </RelativeLayout>
                        <RelativeLayout
                           android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:visibility="visible">



                            <com.zeyalychat.com.utils.CustomTextViewRegular
                                android:id="@+id/timefrom"

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"


                                android:padding="@dimen/_2sdp"
                                android:text="12:00 Am"
                                android:textColor="@color/medium_text_color"
                                android:textSize="@dimen/_9sdp"
                                android:visibility="visible" />
                            <com.zeyalychat.com.utils.CustomTextViewRegular
                                android:id="@+id/timeto"
                                android:layout_below="@+id/timefrom"

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"


                                android:padding="@dimen/_2sdp"
                                android:text="12:00 Am"
                                android:textColor="@color/medium_text_color"
                                android:textSize="@dimen/_9sdp"
                                android:visibility="visible" />

                        </RelativeLayout>
                    </RelativeLayout>



                </RelativeLayout>


            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>


</layout>